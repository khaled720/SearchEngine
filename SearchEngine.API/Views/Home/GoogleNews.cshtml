@{
}

@{
	ViewData["Title"] = "Wikipedia";
	Layout = "_Layout";

}

@model List<SearchEngine.API.Controllers.NewsModel> 


	<div style="display:flex;align-items:center;flex-direction:column;width:100%;">





@foreach (SearchEngine.API.Controllers.NewsModel newsItem in Model)
{
	<div style="    padding: 10px;
    border-radius: 20px;position:relative;
     background-color: #1d1d41;
color:white;width:60%;margin-bottom:10px;
    border: #6c6a7961 solid 0px;">

		<div style="position:absolute;left:5px;top:35%;border-radius:25px;padding:10px;border:#302faf 1px solid;">
			<img src=@Url.Content("~/google.png")
				 width="30px" height="30px" />
		</div>



		<div style="margin-left:55px">

			<a target="_blank" href="@newsItem.SourceLink">

				<h4>@newsItem.Title</h4>
			</a>

			<p>
			@Html.Raw(@newsItem.Description)
			</p>
			<p>
				@newsItem.Source - @newsItem.PubDate
			</p>

		</div>

	</div>
	<br />
}
</div>